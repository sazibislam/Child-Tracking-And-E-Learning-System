<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="com.sazib.alphabet.Map.LattitudeAndLongitudeMap">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lattitude"
            android:hint="Lattitude:"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lattitude"
            android:hint="Longtude:"
            android:id="@+id/longtude" />

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/longtude"
            android:text="Enter"/>

        <WebView
            android:id="@+id/webView_lattitude"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </WebView>

    </LinearLayout>

</RelativeLayout>
