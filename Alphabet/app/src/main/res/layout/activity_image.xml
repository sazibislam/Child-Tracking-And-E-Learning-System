<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context="com.sazib.alphabet.PicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pic_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:gravity="center"
            android:text="@string/text_of_pic_textview"
            android:textSize="20dp"
            android:textColor="@color/colorGreen" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:background="@color/White">

        <ImageView
            android:id="@+id/pic_imageview_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:paddingTop="1dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/White"
            android:orientation="vertical">

            <Button
                android:id="@+id/pic_image_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text=""
                android:textColor="@color/Black" />

            <Button
                android:id="@+id/pic_image_btn11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text=""
                android:textColor="@color/Black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/pic_image_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text=""
                android:textColor="@color/Black" />

            <Button
                android:id="@+id/pic_image_btn22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text=""
                android:textColor="@color/Black" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
